{
  "name": "@luxfhe/relayer-sdk",
  "version": "0.5.0",
  "description": "LuxFHE Relayer SDK - FHE transaction relaying for Lux Network",
  "main": "lib/node.js",
  "types": "lib/node.d.ts",
  "browser": "lib/web.js",
  "type": "module",
  "bin": {
    "relayer": "bin/relayer.js"
  },
  "exports": {
    "./web": {
      "types": "./lib/web.d.ts",
      "import": "./lib/web.js",
      "require": "./lib/web.js"
    },
    "./bundle": {
      "types": "./bundle.d.ts",
      "import": "./bundle.js",
      "require": "./bundle.js"
    },
    "./node": {
      "types": "./lib/node.d.ts",
      "import": "./lib/node.js",
      "require": "./lib/node.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint src/",
    "generateKeys": "./generateKeys.js",
    "build": "pnpm run build:lib && pnpm run build:bundle",
    "build:lib": "pnpm run rollup:lib && pnpm run build:dts",
    "build:bundle": "vite build --config config/vite.config.js",
    "test": "jest --colors --passWithNoTests --coverage",
    "test:testnet": "jest --colors --passWithNoTests --coverage --config jest.testnet.config.cjs",
    "test:devnet": "jest --colors --passWithNoTests --coverage --config jest.devnet.config.cjs",
    "test:mock": "jest --colors --passWithNoTests --coverage --config jest.mock.config.cjs",
    "test:dom": "jest --colors --passWithNoTests --coverage --config jest.dom.config.cjs",
    "test:watch": "jest --colors --passWithNoTests --watch",
    "prettier": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "rollup:lib": "rollup -c config/rollup.config.js",
    "clean": "rm -rf dist.tmp lib bundle coverage",
    "clean:dts": "rm -rf dist.tmp",
    "tsc:dts": "tsc --project config/tsconfig.dts.json",
    "tsc:ts": "tsc --project ./tsconfig.json --noEmit",
    "tsc:ts:test": "tsc --project ./tsconfig.test.json --noEmit",
    "flatten:dts": "api-extractor run --local --config config/api-extractor.node.json && api-extractor run --local --config config/api-extractor.web.json",
    "build:dts": "pnpm run clean:dts && pnpm run tsc:dts && pnpm run copy:dts && pnpm run clean:dts",
    "copy:dts": "cp dist.tmp/node.d.ts lib/node.d.ts && cp dist.tmp/web.d.ts lib/web.d.ts && cp dist.tmp/init.d.ts lib/init.d.ts && cp dist.tmp/index.d.ts lib/index.d.ts",
    "version": "cd ./scripts && node ./generate-version.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxfhe/relayer-sdk.git"
  },
  "author": "Lux Partners Limited",
  "license": "BSD-3-Clause-Clear",
  "bugs": {
    "url": "https://github.com/luxfhe/relayer-sdk/issues"
  },
  "homepage": "https://github.com/luxfhe/relayer-sdk#readme",
  "dependencies": {
    "@luxfhe/kms": "^0.1.2",
    "@luxfhe/wasm": "^0.1.3",
    "commander": "^14.0.0",
    "ethers": "^6.15.0",
    "fetch-retry": "^6.0.0",
    "keccak": "^3.0.4",
    "wasm-feature-detect": "^1.8.0"
  },
  "devDependencies": {
    "@fetch-mock/jest": "0.2.16",
    "@jest/globals": "30.0.4",
    "@microsoft/api-extractor": "7.52.8",
    "@rollup/plugin-alias": "5.1.1",
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-replace": "6.0.2",
    "@rollup/plugin-typescript": "12.1.4",
    "@rollup/plugin-url": "8.0.2",
    "@rollup/plugin-wasm": "6.2.2",
    "@surma/rollup-plugin-off-main-thread": "2.2.3",
    "@types/jest": "30.0.0",
    "@types/keccak": "3.0.5",
    "@types/node-fetch": "2.6.12",
    "buffer": "6.0.3",
    "crypto-browserify": "3.12.1",
    "dotenv": "^17.2.3",
    "fetch-mock": "^12.6.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.2.0",
    "jest-raw-loader": "1.0.1",
    "path-browserify": "1.0.1",
    "prettier": "3.6.2",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-polyfill-node": "0.13.0",
    "stream-browserify": "3.0.0",
    "to-array-buffer": "3.2.0",
    "ts-jest": "29.4.0",
    "ts-loader": "9.5.2",
    "tsc-alias": "1.8.16",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "vite": "7.0.5",
    "vite-plugin-node-polyfills": "0.24.0",
    "vite-plugin-static-copy": "^3.1.2"
  },
  "engines": {
    "node": ">=22"
  }
}
